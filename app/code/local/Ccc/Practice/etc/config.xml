<config>
    <modules>
        <Ccc_Practice>
            <version>1.0.0.0</version>                
        </Ccc_Practice>
    </modules>
    <frontend>
        <routers>
            <practice>
                <use>standard</use>
                <args>
                    <module>Ccc_Practice</module>
                    <frontName>practice</frontName>
                </args>
            </practice>
        </routers>
    </frontend>
    <global>
        <models>
            <practice>
                <class>Ccc_Practice_Model</class>
                <resourceModel>practice_resource</resourceModel>
            </practice>
            <practice_resource>
                <class>Ccc_Practice_Model_Resource</class>
                <entities>
                    <practice>
                        <table>product</table>
                    </practice>
                </entities>
            </practice_resource>
            <catalog>
                <rewrite>
                    <!-- Model -->
                    <product></product>
                </rewrite>
            </catalog>
        </models>
        <events>
           <cms_page_prepare_save>
            <observers>
               <Ccc_Practice_Model_Observer>
                   <type>singleton</type>
                   <class>Ccc_Practice_Model_Observer</class>
                   <method>saveCmsPageObserve</method>
                </Ccc_Practice_Model_Observer>
               </observers>
          </cms_page_prepare_save>
    </events>
