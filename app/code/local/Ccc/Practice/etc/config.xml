                <use>core_read</use>
            </connection>
        </practice_read>
         </resources> -->
        <blocks>
            <practice>
                <class>Ccc_Practice_Block</class>
                <rewrite>
                    <adminhtml_practice>Ccc_Practice_Block_Adminhtml_NewPractice</adminhtml_practice>
                </rewrite>
            </practice>
            <adminhtml>
                <rewrite>
                    <catalog_product_grid>Ccc_Practice_Block_Adminhtml_Catalog_Product_Grid</catalog_product_grid>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <practice>
                <class>Ccc_Practice_Helper</class>
                <rewrite>
                    <data>Ccc_Practice_Helper_NewData</data>
                </rewrite>
            </practice>
        </helpers>
        
    </global>
