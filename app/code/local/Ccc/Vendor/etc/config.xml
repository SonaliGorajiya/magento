<config>
    <modules>
        <Ccc_Vendor>
            <version>1.0.0.0</version>                
        </Ccc_Vendor>
    </modules>
    <frontend>
        <routers>
            <vendor>
                <use>standard</use>
                <args>
                    <module>Ccc_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </vendor>
        </routers>
        <layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <vendor>
                <class>Ccc_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </vendor>
            <vendor_resource>
                <class>Ccc_Vendor_Model_Resource</class>
                <entities>
                    <vendor>
                        <table>vendor</table>
                    </vendor>
                    <vendor_address>
                        <table>vendor_address</table>
                    </vendor_address>  
                </entities>
            </vendor_resource>
        </models>
