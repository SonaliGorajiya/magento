             <vendor_setup>
                 <setup>
                 <module>Ccc_Vendor</module>
                 </setup>
             </vendor_setup>

        <vendor_write>
            <connection>
                <use>core_write</use>
            </connection>
        </vendor_write>

        <vendor_read>
            <connection>
                <use>core_read</use>
            </connection>
        </vendor_read>
         </resources> -->
        <blocks>
            <vendor>
                <class>Ccc_Vendor_Block</class>
            </vendor>
        </blocks>
        <helpers>
            <vendor>
                <class>Ccc_Vendor_Helper</class>
            </vendor>
        </helpers>
        
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <ccc_vendor before="Mage_Adminhtml">Ccc_Vendor_Adminhtml</ccc_vendor>
                    </modules>
                </args>
            </adminhtml>
        </routers>
  </admin>
  
</config>
