<config>
    <modules>
        <Sg_Vendor>
            <version>1.0.1</version>                
        </Sg_Vendor>
    </modules>
    <frontend>
        <routers>
            <vendor>
                <use>standard</use>
                <args>
                    <module>Sg_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </vendor>
        </routers>
        <layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>
    </frontend>
    <global>
        <resources>
            <vendor_setup>
                <setup>
                    <module>Sg_Vendor</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </vendor_setup>
            <vendor_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </vendor_write>
            <vendor_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </vendor_read>
        </resources>
        <models>
            <vendor>
                <class>Sg_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </vendor>
            <vendor_resource>
                <class>Sg_Vendor_Model_Resource</class>
                <deprecatedNode>vendor_mysql4</deprecatedNode>
                <entities>
                    <vendor>
                        <table>vendor</table>
                    </vendor>
                    <vendor_address>
                        <table>vendor_address</table>
                    </vendor_address>  
                </entities>
            </vendor_resource>
        </models>
        <template>
            <email>
                <vendor_account_details module="vendor">
                    <label>Welcome Email Template</label>
                    <file>vendor-new-send.html</file>
                    <type>html</type>
                </vendor_account_details>
            </email>
        </template>
        <blocks>
            <vendor>
                <class>Sg_Vendor_Block</class>
            </vendor>
        </blocks>
        <helpers>
            <vendor>
                <class>Sg_Vendor_Helper</class>
            </vendor>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <sg_vendor before="Mage_Adminhtml">Sg_Vendor_Adminhtml</sg_vendor>
                    </modules>
                </args>
            </adminhtml>
        </routers>
  </admin>
</config>
