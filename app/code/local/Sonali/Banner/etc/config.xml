<config>
    <modules>
        <Sonali_Banner>    
            <version>0.1.1</version>
        </Sonali_Banner>
    </modules>
    <frontend>
        <routers>
            <banner>
                <use>standard</use>
                <args>
                    <module>Sonali_Banner</module>
                    <frontName>banner</frontName>
                </args>
            </banner>
        </routers>
        <layout>
            <updates>
                <banner module="Sonali_Banner">
                    <file>banner.xml</file>
                </banner>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <banner>
                <class>Sonali_Banner_Model</class>
                <resourceModel>banner_resource</resourceModel>
            </banner>
            <group>
                <class>Sonali_Banner_Model_Group</class>
                <resourceModel>group_resource</resourceModel>
            </group>
            <banner_resource>
                <class>Sonali_Banner_Model_Resource</class>
                <deprecatedNode>banner_mysql4</deprecatedNode>
                <entities>
                    <banner>
                        <table>banner</table>
                    </banner>
                    <group>
                        <table>banner_group</table>
                    </group>
                </entities>
            </banner_resource>
        </models>
        <resources>
            <banner_setup>
                <setup>
                    <module>Sonali_Banner</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </banner_setup>
            <banner_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </banner_write>
            <banner_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </banner_read>
        </resources>
        <blocks>
            <banner>
                <class>Sonali_Banner_Block</class>
            </banner>
        </blocks>
        <helpers>
           <banner>
                  <class>Sonali_banner_Helper</class>
            </banner>
        </helpers>
    </global>
    <admin>
        <routers>
            <Banner>
                <use>admin</use>
                <args>
                    <module>Sonali_Banner</module>
                    <frontName>banner</frontName>
                </args>
            </Banner>
        </routers>
    </admin>
</config>