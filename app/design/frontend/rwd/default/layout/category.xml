<?xml version="1.0"?>
<layout version="0.1.0">
    <cms_index_index>
        <remove name="right"></remove>
        <reference name="content">
            <block type="category/category" name="category.category" after="brand.image" template="category/category.phtml"/>
        </reference>
    </cms_index_index>
    <catalog_category_view>
        <remove name="right"></remove>
        <remove name="header"></remove>
        <remove name="footer"></remove>
        
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
    </catalog_category_view>
</layout>

